<?xml version='1.0'?>
<sdf version='1.5'>
  <model name='roulette_wheel'>

    <pose> 0 0 0 0 0 0</pose>
    <self_collide> 0 </self_collide>
    <static>0</static>

    <joint name='rotation_joint' type="revolute">
      <parent> roulette_stock </parent>
      <child> roulette_wheel </child>
      <axis>
        <xyz> 0 0 1 </xyz>
      </axis>
      <physics>
        <ode>
          <velocity> 1 </velocity>
        </ode>
      </physics>
    </joint>

    <link name='roulette_wheel'>
      <pose> 0 0 0.35 0 0 0</pose>
      <visual name='roulette_top'>
        <geometry>
          <box>
            <size>1.0 1.00 0.001</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>model://2018/roulette/materials/scripts</uri>
            <uri>model://2018/roulette/materials/textures</uri>
            <name>Roulette/Face</name>
          </script>
        </material>
      </visual>

      <collision name="roulette_wheel_collision">
        <geometry>
          <box>
            <size>1.0 1.00 0.001</size>
          </box>
        </geometry>
      </collision>
    </link>

    <link name='roulette_stock'>
      <pose> 0 0 0.174 0 0 0 </pose>
      <visual name='roulette_stock_vis'>
        <geometry>
          <cylinder>
            <radius>0.035</radius>
            <length>0.35</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
      <collision name='roulette_collide'>
        <geometry>
          <cylinder>
            <radius>0.5</radius>
            <length>0.35</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <plugin name="roulette_spinner" filename="libroulette_spinner.so">
        <rate> 1.0 </rate>
    </plugin>

  </model>
</sdf>
